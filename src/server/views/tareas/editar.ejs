<%- include("../header"); %>
    <div class="col-12">
        <h1>Editar tarea</h1>
        <form method="post" action="/tareas/actualizar">
            <input value="<%= tareas.id %>" name="id" type="hidden">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input require id="nombre" placeholder="Nombre de la tarea"
                    class="form-control" type="text" name="nombre">
            </div>
            <div class="form-group">
                <button class="btn btn-success">Guardar</button>
                &nbsp;<a href="/tareas" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div>
<%- include("../footer"); %>